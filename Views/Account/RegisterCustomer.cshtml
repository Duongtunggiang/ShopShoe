@model NewShop.Models.Account

@{
    ViewBag.Title = "Đăng Ký Khách Hàng";
}

<h2>Đăng Ký Khách Hàng</h2>

@using (Html.BeginForm("RegisterCustomer", "Account", FormMethod.Post))
{
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

    <div class="mb-3">
        @Html.LabelFor(m => m.Username, new { @class = "form-label" })
        @Html.TextBoxFor(m => m.Username, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.Username, "", new { @class = "text-danger" })
    </div>

    <div class="mb-3">
        @Html.Label("Mật khẩu", new { @class = "form-label" })
        @Html.Password("password", new { @class = "form-control" })
        @Html.ValidationMessage("password", "", new { @class = "text-danger" })
    </div>

    <div class="mb-3">
        @Html.Label("Xác nhận mật khẩu", new { @class = "form-label" })
        @Html.Password("confirmPassword", new { @class = "form-control" })
        @Html.ValidationMessage("confirmPassword", "", new { @class = "text-danger" })
    </div>

    <button type="submit" class="btn btn-primary">Đăng Ký</button>
}

<p>
    <a href="@Url.Action("Login", "Account")">Đã có tài khoản? Đăng nhập ngay!</a>
</p>
